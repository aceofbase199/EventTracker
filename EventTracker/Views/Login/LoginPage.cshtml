@model EventTracker.Models.UserDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <style type="text/css">
        .bs-example {
            height: 220px;
        }

        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .error {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }

        .loginbtn {
            padding-left: 500px;
        }
    </style>

</head>
<body>

    @using (Html.BeginForm())
    {
        <div class="bs-example">

            <div class="form-group centerlook">
                <h1> Login </h1>
            </div>
            <div class="form-group centerlook">
                <label>User Name: </label>
                @Html.EditorFor(model => model.UserName)
            </div>
            <div class="form-group centerlook">
                <label>Password:</label>
                @Html.EditorFor(model => model.Password)
            </div>
            <div class="form-group error">
                @Html.ValidationSummary(false)
            </div>
            <div class="loginbtn">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    }
</body>
</html>